        <condition/>
        <description>Use GetEmailAddress Script include to retrieve the requested for's email address from the database when the Requested for value changes</description>
        <field>u_requested_for</field>
        <global>true</global>
        <isolate_script>true</isolate_script>
        <messages/>
        <name>NeedIT Populate Email Field</name>
        <order/>
        <script><![CDATA[function onChange(control, oldValue, newValue, isLoading, isTemplate) {
   if (isLoading || newValue === '' || newValue == oldValue) {
      return;
   }
	
	//Instantiate GetEmailAddress
	var getEmailAddress = new GlideAjax('GetEmailAddress');
	//Name of method
	getEmailAddress.addParam('sysparam_name', 'getEmail');
	//paramteres to method
	getEmailAddress.addParam('sysparam_userID', g_form.getValue('u_requested_for'));
	//send Request, set callback
	getEmailAddress.getXML(populateEmailAddress);
	
	function populateEmailAddress(resp){
		var email = resp.responseXML.documentElement.getAttribute("answer");
		alert(email);
		g_form.clearValue('u_requested_for_email');
		g_form.setValue('u_requested_for_email', email);
	}   
}]]></script>
